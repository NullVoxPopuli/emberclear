<section class='logout-warning hero bg-danger text-light'>

  <div class='container'>
    <h1>
      {{t 'ui.logout.title'}}
    </h1>

    <h2>
      {{t 'ui.logout.warning'}}

      <LinkTo @route='settings'>
        {{t 'ui.logout.theSettingsPage'}}
      </LinkTo>
    </h2>


    <div class='cta-with-fallback'>

      <button {{on 'click' this.goBack}}>
         <FaIcon @icon='chevron-left' @prefix='fas' />
        <span>{{t 'ui.logout.takeMeBack'}}</span>
      </button>
      <button
        data-test-confirm-logout
        type='button'
        {{on 'click' this.logout}}
      >
        <FaIcon @icon='sign-out-alt' @prefix='fas' />
        <span>{{t 'ui.logout.confirm'}}</span>
      </button>
    </div>
  </div>
</section>
