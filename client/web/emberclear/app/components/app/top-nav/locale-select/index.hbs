<div
  data-test-locale-select
  class='
    dropdown dropdown-left
    {{if this.isActive 'active'}}
  '
>
  <button
    data-test-locale-toggle
    type='button'
    class='button-secondary'
    aria-haspopup='true'
    aria-controls='dropdown-menu'
    {{on 'click' this.toggleMenu}}
  >
    <FaIcon @icon='globe' />
  </button>

  <div
    {{did-insert this.didInsert}}
    class='dropdown-menu'
    role='menu'
  >
    {{#each this.options as |opt|}}
      <button
        type='button'
        class='button-link navbar-item'
        {{on 'click' (queue
          (fn this.chooseLanguage opt.locale)
          this.closeMenu
        )}}
      >
        <span>{{opt.label}}</span>
      </button>
    {{/each}}
  </div>
</div>
