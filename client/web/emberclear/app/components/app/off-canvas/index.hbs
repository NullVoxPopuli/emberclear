<MobileMenuWrapper @preventScroll={{true}} as |mmw|>

  {{#if this.currentUser.isLoggedIn}}
    <mmw.MobileMenu
      @mode={{this.mode}}
      @isOpen={{this.sidebar.isShown}}
      {{did-resize this.updateWindowWidth}}
    >

      <App::Sidebar
        class='sidebar-wrapper'
        id='sidebar'
        {{on-key 'ctrl+space' this.sidebar.toggle}}
      />

    </mmw.MobileMenu>
  {{/if}}

  <mmw.Content id='scrollContainer'>
    {{yield}}
  </mmw.Content>
</MobileMenuWrapper>
