<MobileMenuWrapper @openDetectonWidth={{30}} as |mmw|>

  {{#if this.currentUser.isLoggedIn}}
    <mmw.MobileMenu as |mm|>

      <App::Sidebar
        class='sidebar-wrapper'
        id='sidebar'
        {{on-key 'ctrl+space' this.sidebar.toggle}}
      />

    </mmw.MobileMenu>
  {{/if}}

  <mmw.Content>
    {{yield}}
  </mmw.Content>
</MobileMenuWrapper>
