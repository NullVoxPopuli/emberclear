<aside ...attributes>
  <div>
    {{did-insert switchToContacts}}
    {{#if (has-feature-flag 'democracy-ui')}}
      <nav class='sidebar-nav'>
        {{#if this.contactsSelected}}
          <button
            id='contacts-tab'
            class='sidebar-tab sidebar-tab-selected'
          >
              Contacts
          </button>
        {{else}}
          <button
            id='contacts-tab'
            class='sidebar-tab'
            onclick={{action 'switchToContacts'}}
          >
              Contacts
          </button>
        {{/if}}

        {{#if this.channelsSelected}}
          <button 
            id='channels-tab'
            class='sidebar-tab sidebar-tab-selected'
          >
              Channels
          </button>
        {{else}}
          <button id='channels-tab' class='sidebar-tab'
            onclick={{action 'switchToChannels'}}
          >
              Channels
          </button>
        {{/if}}

        {{#if this.actionsSelected}}
          <button id='actions-tab' class='sidebar-tab sidebar-tab-selected'
          >
              Actions
          </button>
        {{else}}
          <button id='actions-tab' class='sidebar-tab'
            onclick={{action 'switchToActions'}}
          >
              Actions
          </button>
        {{/if}}

      </nav>
    {{/if}}

    {{#if this.hasUnreadAbove}}
      <App::Sidebar::UnreadIndicator
        @onClick={{this.scrollUpToNearestUnread}}
        @direction='up'
      />
    {{/if}}

    {{#if (has-feature-flag 'democracy-ui')}}
      {{#if this.contactsSelected}}
        <App::Sidebar::Chats />
      {{else if this.channelsSelected}}
        {{!-- TODO --}}
      {{else}}
        <App::Sidebar::Actions />
      {{/if}}
    {{else}}
        <App::Sidebar::Chats />
    {{/if}}

    {{!-- <SlideTransition @isVisible={{this.hasUnreadBelow}}> --}}
    {{#if this.hasUnreadBelow}}
      <App::Sidebar::UnreadIndicator
        @onClick={{this.scrollDownToNearestUnread}}
        @direction='down'
      />
    {{/if}}

  </div>



  {{#if this.isLoggedIn}}
    <App::Sidebar::Footer />
  {{/if}}
</aside>
