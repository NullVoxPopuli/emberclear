<aside ...attributes>
  <div>
    <nav class='sidebar-nav'>
      <a
        id='contacts-tab'
        class='sidebar-tab sidebar-tab-selected'
        @onClick={{this.switchTo}}
      >
          Contacts
      </a>

      <a id='channels-tab' class='sidebar-tab'
        {{!-- @onClick={{this.switchTo Tab.Channels}} --}}
      >
          Channels
      </a>

      <a id='actions-tab' class='sidebar-tab'
        {{!-- @onClick={{this.switchTo Tab.Actions}} --}}
      >
          Actions
      </a>
    </nav>

    {{#if this.hasUnreadAbove}}
      <App::Sidebar::UnreadIndicator
        @onClick={{this.scrollUpToNearestUnread}}
        @direction='up'
      />
    {{/if}}

    <App::Sidebar::Chats />

    {{!-- <SlideTransition @isVisible={{this.hasUnreadBelow}}> --}}
    {{#if this.hasUnreadBelow}}
      <App::Sidebar::UnreadIndicator
        @onClick={{this.scrollDownToNearestUnread}}
        @direction='down'
      />
    {{/if}}

  </div>

  {{#if this.isLoggedIn}}
    <App::Sidebar::Footer />
  {{/if}}
</aside>
