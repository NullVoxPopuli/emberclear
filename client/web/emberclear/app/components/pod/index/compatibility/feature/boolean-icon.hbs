{{#if @value}}
  <span class='has-text-success' ...attributes>
    <FaIcon @icon='check-circle' />
  </span>
{{else if @required}}
  <span class='has-text-danger' ...attributes>
    <FaIcon @icon='times-circle' />
  </span>
{{else}}
  <span class='has-text-warning' ...attributes>
    <FaIcon @icon='exclamation-circle' />
  </span>
{{/if}}
