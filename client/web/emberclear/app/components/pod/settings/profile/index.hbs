<div>
  <form {{on 'submit' this.save}}>

    <Field @label='Name' as |id|>
      <Input
        data-test-name-field
        id={{id}}
        @value={{this.name}}
      />

    </Field>

    <div class='cta'>
      <input
        data-test-save
        class='button'
        type='submit'
        value={{t 'buttons.save' }}
      >
    </div>

  </form>

  <hr>

  <button type='button' {{on 'click' this.downloadSettings}} class='button'>
    {{t 'ui.settings.download' }}
  </button>

  <button
    disabled
    type='button'
    class='button'
  >
    {{t 'ui.settings.copyProfileToDevice'}}
  </button>
</div>
