<button
  data-test-add-relay
  type='button'
  class='button'
  {{on 'click' this.toggleForm}}
>
  {{#if this.isVisible}}
    {{t 'buttons.cancel'}}
  {{else}}
    {{t 'ui.settings.relays.add'}}
  {{/if}}
</button>

{{#if this.isVisible}}
  <form {{on 'submit' (prevent-default this.submit)}} data-test-add-relay-form>
    <Field @label='Socket URL'>
      <Input
        data-test-socket-field
        class='input'
        @value={{this.socketURL}}
      />
    </Field>

    <Field @label='Open Graph URL'>
      <Input
        data-test-og-field
        class='input'
        @value={{this.openGraphURL}}
      />
    </Field>

    <div class='flex justify-content-end'>
      <input data-test-save-relay class='button' type='submit' value={{t 'buttons.save'}}>
    </div>
  </form>
{{/if}}
