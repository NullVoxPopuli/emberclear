<div
  data-test-qr-scanner
  class='qr-scanner_container'
  ...attributes
  {{did-insert this.start}}
>

  {{#if this.cameraStream}}
    <JSQR::Scanner
      @cameraStream={{this.cameraStream}}
      @onData={{this.handleData}}
    >
      <div class='loader'></div>
    </JSQR::Scanner>
  {{else}}
    {{t 'qrCode.waitingForCamera'}}
  {{/if}}

</div>
