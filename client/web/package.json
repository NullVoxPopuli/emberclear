{
  "name": "emberclear-web",
  "version": "0.0.0",
  "description": "PWA client for emberclear",
  "main": "index.js",
  "repository": "https://github.com/NullVoxPopuli/emberclear",
  "author": "NullVoxPopuli",
  "license": "GPL-3.0",
  "private": true,
  "workspaces": [
    "pinochle",
    "emberclear",
    "smoke-tests",
    "config",
    "addons/*",
    "libraries/*",
    "lint/*"
  ],
  "nohoist": [
    "emberclear",
    "addons/*"
  ],
  "scripts": {
    "lint:js": "eslint .",
    "types:build": "tsc --build",
    "types:clean": "tsc --build --clean",
    "types:rebuild": "tsc --build --clean && tsc --build",
    "types:watch": "tsc --build --clean && tsc --build --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js}": "yarn eslint --fix --quiet --cache",
    "*.hbs": "yarn ember-template-lint --fix",
    "*.css": "yarn stylelint --fix --cache",
    "translations/*.yml": "yarn ember-intl-analyzer"
  },
  "resolutions": {
    "ember-test-waiters": "2.1.3",
    "xstate": "^4.18.0"
  },
  "devDependencies": {
    "@nullvoxpopuli/eslint-configs": "1.3.2",
    "cross-env": "7.0.3",
    "deepmerge": "4.2.2",
    "ember-intl-analyzer": "3.0.0",
    "ember-template-lint": "3.5.0",
    "husky": "4.3.8",
    "lint-staged": "11.0.0",
    "sass-lint": "1.13.1",
    "stylelint": "15.10.1",
    "stylelint-config-standard": "22.0.0",
    "typescript": "4.3.4"
  },
  "engines": {
    "node": "14.17.1"
  },
  "volta": {
    "node": "14.17.1",
    "yarn": "1.22.10"
  }
}
