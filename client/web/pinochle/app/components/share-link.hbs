<div class='share-url grid gap-2'>
  <div class='input-box grid:cols gap-2 left-column'>
    <input id='url' value={{@url}} readonly {{on 'click' this.highlight}}>
    <button type='button' {{on 'click' this.copy}}>
      Copy
    </button>
  </div>
  <label for='url'>
    Share this link with people to join your game
  </label>
</div>