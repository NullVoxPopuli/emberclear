<div class='perspective grid bottom-favored center' ...attributes>
  <ul
    class='player-hand {{if this.isActive 'spread'}}'
    {{!-- template-lint-disable no-invalid-interactive --}}
    {{stack this.toggle}}
    {{resize this.adjust}}
  >
    {{#each @cards as |card|}}
      <PlayingCard
        id={{card.id}}
        @suit={{card.suit}}
        @value={{card.value}}
        {{on 'click' (fn this.selectCard card)}}
      />
    {{/each}}
  </ul>


  {{!--
    For additional game info to overlay the hand, but controlled from above
    The hand component only knows how to handle hand stuff
  --}}
  {{yield}}

  <span class='player-hand-info'>
    <button type='button' {{on 'click' this.toggle}}>
      Fan
    </button>

    Meld: {{this.meld.score}}
  </span>
</div>