<div class='navbar-item dropdown is-right {{if this.isActive 'is-active'}}'>
  <div class='dropdown-trigger'>
    <button
      {{on 'click' (fn this.toggleMenu)}}
      class='button is-primary'
      style='z-index: 31;'
      aria-haspopup='true'
      aria-controls='dropdown-menu'
    >
      <small class='icon'>
        {{fa-icon 'globe'}}
      </small>
    </button>
  </div>

  <div
    {{did-insert this.didInsert}}
    class='dropdown-menu m-r-sm'
    role='menu'
    style='min-width: auto; z-index: 31;'
  >
    <div class='dropdown-content' tablist>
      {{#each this.options as |opt|}}
        <a
          {{on 'click' (action (queue
            (fn this.chooseLanguage opt.locale)
            this.closeMenu
          ))}}
          class='navbar-item'
        >
          <span>{{opt.label}}</span>
        </a>
      {{/each}}
    </div>
  </div>

  <Backdrop
    @isActive={{this.isActive}}
    @onClick={{this.closeMenu}}
    style='z-index: 30;'
  />
</div>
