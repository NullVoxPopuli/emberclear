<Modal
  @isActive={{@isActive}}
  @close={{action @close}}
  role='search'>

  <Field @label={{t 'ui.search.title'}} @hidden={{true}} as |id|>
    <input
      autofocus
      type='text'
      id={{id}}
      class='input-lg'
      value={{this.searchText}}
      placeholder={{t 'ui.search.title'}}
      {{on 'input' this.onInput}}
      {{did-insert this.submitSearch}}
      {{did-insert this.focusInput}}
    >
  </Field>

  <div style='max-height: 250px; margin-right: -1rem; padding-right: 1rem;'>
    {{#if (not this.hasResults)}}
      {{t 'ui.search.nothingFound'}}
    {{else}}
      <span class='section-title'>{{t 'ui.search.contacts'}}</span>

      {{#each this.contactResults as |identity|}}
        <div tablist>
          <Search::Result @to='chat.privately-with' @id={{identity.uid}} @afterSelect={{action @close}}>
            <span>
              @ <strong class='has-text-link'>{{identity.name}}</strong>
            </span>
            <span class='has-text-grey'>
              {{first-8 identity.uid}}
            </span>
          </Search::Result>
        </div>
      {{else}}
        {{t 'ui.search.noContacts'}}
      {{/each}}

      <hr>
      <span class='section-title'>{{t 'ui.search.channels'}}</span>

      {{#each this.channelResults as |channel|}}
        <div tablist>
          <Search::Result @to='chat.in-channel' @id={{channel.id}} @afterSelect={{action @close}}>
            <span>
              # <strong class='has-text-link'>{{channel.name}}</strong>
            </span>
            <span class='has-text-grey'>
              {{first-8 channel.id}}
            </span>
          </Search::Result>
        </div>
      {{else}}
        {{t 'ui.search.noChannels'}}
      {{/each}}
    {{/if}}
  </div>
</Modal>
