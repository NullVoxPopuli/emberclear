<div
  style='width: 100%; height: 300px; overflow: hidden'
  ...attributes
  {{did-insert this.mountScanner}}
>

  {{#unless this.started}}
    <div style='width: 250px; height: 250px;' class='loader'></div>
  {{/unless}}

  <video
    id='qr-preview'
    class='w-100 {{if this.started 'is-block' 'is-hidden'}}'
    autoplay='autoplay'
  />

</div>

<div class='mar-t-md'>
  <button {{on 'click' @onCancel}}>
    {{t 'buttons.cancel'}}
  </button>
</div>
