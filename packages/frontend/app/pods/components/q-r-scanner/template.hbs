<div
  data-test-qr-scanner
  style='width: 100%; height: 300px; overflow: hidden'
  ...attributes
  {{did-insert this.mountScanner}}
>
  {{#if this.error}}
    <div data-test-error>
      <span>
        {{this.error}}<br>
        {{t 'errors.permissions.enableCamera'}}
      </span>
    </div>
  {{/if}}

  {{#unless this.started}}
    <div class='loader'></div>
  {{/unless}}

  <video
    id='qr-preview'
    class='w-100 {{if this.started 'is-block' 'is-hidden'}}'
    autoplay='autoplay'
  />

</div>

<div class='mar-t-md'>
  <button {{on 'click' @onCancel}}>
    {{t 'buttons.cancel'}}
  </button>
</div>
