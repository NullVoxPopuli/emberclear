<KeyboardPress @key='Escape' @onDown={{action @close}} />

<div
  ...attributes
  aria-modal
  aria-hidden={{not @isActive}}
  class='modal {{if @isActive 'is-active'}}'
>
  <div
    class='modal-background'
    role='button'
    aria-label={{t 'buttons.ariaLabel.modalBackdrop'}}
    {{on 'click' @close}}
  />

  <div class='modal-content'>
    {{#if @isActive}}
      {{yield}}
    {{/if}}
  </div>
</div>

