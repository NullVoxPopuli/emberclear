<Dropdown
  @dir={{'up'}}
  @buttonIcon='plus'
  class='button-secondary'
  data-test-chat-options-dropdown
  as |closeMenu|
>

  <ModalStatic @name='code-or-snippet' as |_isActive actions|>
    <button
      class='button-link'
      data-test-embeds-toggle
      {{on 'click' (queue actions.toggle closeMenu)}}
    >
      {{fa-icon 'code'}}
      <span>{{t 'ui.chat.embedMenu.code'}}</span>
    </button>
  </ModalStatic>

  <button class='button-link text-muted' disabled>
    {{fa-icon 'bed'}}
    <span>{{t 'ui.chat.embedMenu.embed'}}</span>
  </button>

  <hr class='dropdown-divider'>

  <button class='button-link text-muted' disabled>
    {{fa-icon 'desktop'}}
    <span>{{t 'ui.chat.embedMenu.file'}}</span>
  </button>

  <hr class='dropdown-divider'>

  <button class='button-link text-muted' disabled>
    {{fa-icon 'video'}}
    <span>{{t 'ui.chat.embedMenu.video'}}</span>
  </button>

  <button class='button-link text-muted' disabled>
    {{fa-icon 'phone'}}
    <span>{{t 'ui.chat.embedMenu.audio'}}</span>
  </button>
</Dropdown>

<ModalStatic @name='code-or-snippet' as |isActive actions|>
  <Pod::Chat::ChatEntry::EmbedsMenu::Snippet
    @isActive={{isActive}}
    @close={{actions.close}}
    @sendTo={{@sendTo}}
  />
</ModalStatic>
