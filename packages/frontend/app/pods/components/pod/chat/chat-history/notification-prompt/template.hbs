{{#if this.isVisible}}
  <div
    data-test-notification-prompt
    class='
      alert alert-info
      is-radiusless
      text-center
      transition-all
      has-shadow
    '
  >
    <a
      data-test-dismiss
      class='delete'
      {{on 'click' this.askNextTime}}>
      {{fa-icon 'times'}}
    </a>

    <strong>{{t 'ui.notifications.prompt.title'}}</strong>

    <div data-test-enable class='flex justify-content-space-around m-t-sm'>
      <a {{on 'click' this.enableNotifications}}>
        {{t 'ui.notifications.prompt.enable'}}
      </a>

      <a data-test-ask-later {{on 'click' this.askNextTime}}>
        {{t 'ui.notifications.prompt.askLater'}}
      </a>

      <a data-test-ask-never {{on 'click' this.neverAskAgain}}>
        {{t 'ui.notifications.prompt.neverAsk'}}
      </a>
    </div>
  </div>
{{/if}}
