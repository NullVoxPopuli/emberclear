{{#if (is-present @urls)}}
  <div class='flex flex-wrap'>
    {{#each @urls as |url|}}
      <FetchOpenGraph @url={{url}} as |isLoading data|>

        {{#if (not isLoading)}}

          {{!-- TODO: if meta is renderable? --}}
          <Pod::Chat::ChatHistory::Message::EmbeddedResource
            class='flex'
            @url={{url}}
            @meta={{data.meta}}
          />

        {{/if}}

      </FetchOpenGraph>
    {{/each}}
  </div>
{{/if}}
