{{#if this.shouldRender}}
  <div
    class='unread-indicator'
    ...attributes
    {{did-insert this.findMessagesContainer}}
  >
    <div class='input-group has-shadow'>
      <button {{on 'click' this.scrollToFirstUnread}} class='button-sm'>
        <span>
          {{t 'ui.chat.unreadMessages'
            number=this.numberOfUnread
            time=(
              format-date this.dateOfFirstUnreadMessage
              month='short'
              day='numeric'
              hour='numeric'
              minute='numeric'
            )
          }}
        </span>
      </button>
      <button {{on 'click' this.markAllAsRead}} class='button-sm button-danger'>
        <span>{{t 'ui.chat.markAllAsRead'}}</span>
        <span class='icon is-small'>{{fa-icon 'times'}}</span>
      </button>
    </div>
  </div>
{{/if}}
