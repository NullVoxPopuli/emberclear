{{! template-lint-disable no-triple-curlies }}

{{#if this.hasOgData}}
  <div class='metadata-preview'>
    {{#if this.hasImage}}
      <span class='thumbnail-container'>
        <img alt={{t 'images.alt.thumbnail'}} src={{@ogData.image}}>
      </span>
    {{/if}}

    <div class='metadata-preview__text'>
      {{#if this.title}}
        <ExternalLink href={{@url}}>
          {{{this.title}}}
        </ExternalLink>
      {{/if}}

      {{#if this.description}}
        <p>{{{this.description}}}</p>
      {{/if}}
    </div>
  </div>
{{/if}}
