<KeyboardPress @key='ctrl+Space' @onDown={{this.sidebar.toggle}} />

{{#if this.currentUser.isLoggedIn}}
  <Pod::Application::OffCanvasContainer::Sidebar
    class='sidebar-wrapper'
    id='sidebar'
  />
{{/if}}


<main
  id='scrollContainer'
  data-scroll-container
  {{did-insert this.onInsert}}
  {{did-update this.onInsert this.currentUser.isLoggedIn}}
>
  {{yield}}
</main>
