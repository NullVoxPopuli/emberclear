<Collapsible as |isOpen toggle Icon|>
  <div class='menu-label'>
    <a class='has-icon' {{on 'click' (prevent-default toggle)}}>
      <Icon @isOpen={{isOpen}} />
      {{t 'ui.sidebar.channels.title'}}
    </a>

    <button class='button-xs' {{on 'click' (prevent-default this.toggleForm)}}>
      <span class='icon' data-test-channel-form-toggle>
        {{#if this.isFormVisible}}
          {{fa-icon 'times'}}
        {{else}}
          {{fa-icon 'plus'}}
        {{/if}}
      </span>
    </button>
  </div>

  {{#if this.isFormVisible}}
    <Pod::Application::OffCanvasContainer::Sidebar::Channels::ChannelForm @onSubmit={{action this.toggleForm}} />
  {{/if}}


  {{#if isOpen}}
    <nav>
      {{#each this.channels as |channel|}}
        <a
          href={{url-for 'chat.in-channel' channel.id}}
          {{on 'click' (prevent-default (action this.onClickChannel channel))}}
        >
          <span>#</span><span>{{channel.name}}</span>
        </a>
      {{else}}
        {{t 'ui.sidebar.channels.none'}}
      {{/each}}
    </nav>
  {{/if}}

</Collapsible>
