{{#if this.isLoggedIn}}
  <h4>{{this.name}}</h4>

  <nav>
    <a
      href={{url-for 'contacts'}}
      class='has-icon'
      {{on 'click' (queue this.closeSidebar (transition-to 'contacts'))}}
    >
      {{fa-icon 'address-book' prefix='fas'}}
      {{t 'routes.contacts'}}
    </a>

    <a
      href={{url-for 'settings'}}
      class='has-icon'
      {{on 'click' (queue this.closeSidebar (transition-to 'settings'))}}
    >
      {{fa-icon 'sliders-h'}}
      {{t 'routes.settings'}}
    </a>
  </nav>

  <hr>
{{/if}}
