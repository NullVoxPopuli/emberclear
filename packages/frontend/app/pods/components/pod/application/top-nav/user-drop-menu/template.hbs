<div class='navbar-item has-dropdown {{if this.showDropdown 'is-active'}}'>
  <a
    data-test-user-dropdown-toggle
    class='navbar-link'
    style='z-index: 31'
    {{action this.toggleMenu}}
  >
    <span class='icon'>{{fa-icon 'user-circle' prefix='fas'}}</span>
    <span>{{this.name}}</span>

  </a>

  <div
    data-test-user-dropdown
    id={{this.dropDownId}}
    class='navbar-dropdown'
    style='z-index: 31; min-width: 200px'>
    <a
      class='navbar-item'
      {{action (queue
        (action this.closeMenu)
        (transition-to 'contacts'))
      }}
    >
      <span class='icon'>{{fa-icon 'address-book' prefix='fas'}}</span>
      <span>{{t 'routes.contacts'}}</span>
    </a>

    <a
      class='navbar-item'
      {{action (queue
        (action this.closeMenu)
        (transition-to 'settings'))
      }}
    >
      <span class='icon'>{{fa-icon 'sliders-h' prefix='fas'}}</span>
      <span>{{t 'routes.settings'}}</span>
    </a>

    <hr class='navbar-divider'>

    <a
      data-test-logout
      class='navbar-item'
      {{action (queue
        (action this.closeMenu)
        (transition-to 'logout'))
      }}
    >
      <span class='icon'>{{fa-icon 'sign-out-alt' prefix='fas'}}</span>
      <span>{{t 'routes.logout'}}</span>
    </a>
  </div>

  <Backdrop
    @isActive={{this.showDropdown}}
    @onClick={{action this.closeMenu}}
    style='z-index: 30;'
  />
</div>
