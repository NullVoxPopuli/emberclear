<Shadowed>
  <div class='dropdown dropdown-left {{if this.isActive 'active'}}'>
    <button
      {{on 'click' (fn this.toggleMenu)}}
      class='has-icon'
      aria-haspopup='true'
      aria-controls='dropdown-menu'
    >
      {{fa-icon 'globe'}}
    </button>

    <div
      {{did-insert this.didInsert}}
      class='dropdown-menu'
      role='menu'
    >
      {{#each this.options as |opt|}}
        <a
          {{on 'click' (action (queue
            (fn this.chooseLanguage opt.locale)
            this.closeMenu
          ))}}
          class='navbar-item'
        >
          <span>{{opt.label}}</span>
        </a>
      {{/each}}
    </div>
  </div>
</Shadowed>
