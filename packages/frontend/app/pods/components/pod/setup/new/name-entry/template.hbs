<form data-test-name-form {{on 'submit' this.createIdentity}}>

  <Field @label={{t 'models.identity.name'}} @hidden={{true}}>
    <Input
      data-test-name-field
      class='input-xl'
      type='text'
      placeholder={{t 'ui.setup.nameLabel'}}
      @value={{this.name}}
    />
  </Field>

  <div class='cta-with-fallback'>
    {{#link-to 'login'}}
      {{t 'buttons.loginInstead'}}
    {{/link-to}}

    <button data-test-next disabled={{or this.nameIsBlank this.create.isRunning}}>
      {{t 'buttons.next'}}
    </button>
  </div>
</form>
