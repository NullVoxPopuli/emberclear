<div class='tabs'>
  <nav>
    <LinkTo @route='settings' class={{if (is-active 'settings.index') 'active'}}>
      {{t 'ui.settings.tabs.profile'}}
    </LinkTo>

    <LinkTo @route='settings.interface' class={{if (is-active 'settings.interface') 'is-active'}}>
      {{t 'ui.settings.tabs.interface'}}
    </LinkTo>

    <LinkTo @route='settings.relays' class={{if (is-active 'settings.relays') 'is-active'}}>
      {{t 'ui.settings.tabs.relays'}}
    </LinkTo>

    <LinkTo @route='settings.danger-zone' class={{if (is-active 'settings.danger-zone') 'is-active'}}>
      {{t 'ui.settings.tabs.dangerZone'}}
    </LinkTo>
  </nav>
</div>
