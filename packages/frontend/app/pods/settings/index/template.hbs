<form {{action 'save' on='submit'}}>

  <Field @label='Name'>
    <Input
      data-test-name-field
      class='input'
      @value={{this.name}}
      id='Name'
    />
  </Field>

  <div class='flex justify-content-end'>
    <input data-test-save class='button' type='submit' value={{t 'buttons.save' }}>
  </div>
</form>


<button
  data-test-show-private-key-toggle
  class='button'
  {{action (mut this.showPrivateKey) (not this.showPrivateKey)}}
>

  {{#if this.showPrivateKey}}
    {{t 'ui.settings.hideKey'}}
  {{else}}
    {{t 'ui.settings.showKey'}}
  {{/if}}

</button>

{{#if this.showPrivateKey}}
  <MnemonicDisplay @privateKey={{this.currentUser.privateKey}} />
{{/if}}

<a {{action this.downloadSettings}} class='button'>
  {{t 'ui.settings.download' }}
</a>

<button
  disabled
  class='button'
  {{action (mut this.showQRSettings) (not this.showQRSettings)}}
>
  {{t 'ui.settings.copyProfileToDevice'}}
</button>
