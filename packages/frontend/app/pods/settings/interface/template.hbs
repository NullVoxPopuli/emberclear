<div class='m-b-lg' data-test-interface>

  <Switch
    data-test-hide-offline-contacts
    @value={{this.settings.hideOfflineContacts}}
    @label={{t 'ui.settings.hideOfflineContacts'}}
    {{on 'click' (action
      (mut this.settings.hideOfflineContacts)
      (not this.settings.hideOfflineContacts))
    }}
  />

  <br>

  <Switch
    @value={{this.useLeftRightJustificationForMessages}}
    @label={{t 'ui.settings.useLeftRightJustificationForMessages'}}
    {{on 'click' (action
      (mut this.useLeftRightJustificationForMessages)
      (not this.useLeftRightJustificationForMessages))
    }}
  />

  <hr>


  <h2>Theme</h2>

  <Switch
    @value={{this.theme}}
    @label={{'Midnight'}}
    {{on 'click' this.useDarkTheme}}
  />


</div>
