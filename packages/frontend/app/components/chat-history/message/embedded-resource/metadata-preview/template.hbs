{{! template-lint-disable no-triple-curlies }}

<div class='flex-row'>
  {{#if this.hasImage}}
    <span class='thumbnail-container m-r-md'>
      <img alt={{t 'images.alt.thumbnail'}} class='thumbnail' src={{this.og.image}}>
    </span>
  {{/if}}

  <div>
    <a class='block' rel='noopener' href={{@url}} target='_blank'>
      {{{purify-dom this.og.title}}}
    </a>

    <p>{{{purify-dom this.og.description}}}</p>
  </div>
</div>
