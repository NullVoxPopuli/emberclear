{{! template-lint-disable no-bare-strings }}

<footer class='footer'>
  <div class='container'>
    <div class='content'>
      <div class='columns'>
        <div class='column is-half'>
          <h1 class='is-size-4'>{{t 'ui.footer.navigation'}}</h1>

          {{#link-to 'application'}}{{t 'routes.home'}}{{/link-to}}<br>
          {{#link-to 'chat'}}{{t 'routes.chat'}}{{/link-to}}<br>
          {{#link-to 'settings'}}{{t 'routes.settings'}}{{/link-to}}<br>
          {{#link-to 'setup'}}{{t 'routes.createNewUser'}}{{/link-to}}<br>

          {{#link-to 'faq' data-test-footer-faq=true}}{{t 'routes.faq'}}{{/link-to}}<br>
        </div>


        <div class='column is-half'>
          <strong>{{t 'appname'}}</strong> {{t 'authoredBy'}}
          (<ExternalLink href='https://github.com/NullVoxPopuli/'>NullVoxPopuli</ExternalLink>).
          <br><br>
          {{t 'ui.footer.license' htmlSafe=true}}
          <br><br>

          {{t 'ui.footer.wantToSupport'}} <br>
          <a {{action (toggle 'showMoneroAddress' this)}}>
            {{fa-icon 'monero' prefix='fab'}} {{t 'buttons.donateXmr'}}
          </a>
          <br>
          {{#if this.showMoneroAddress}}
            XMR: 49UPDubdAzJ6TL3KMgxSugMV2KwtmeDmX2M2HZSTkcuS1jabsfZYy2hfyzLygW7DPCjhHojQC5gZMCpLiigVV4YcNbeh6d9
          {{/if}}
          <br>

          <ExternalLink href='https://reddit.com/r/emberclear'>
            {{fa-icon 'reddit' prefix='fab'}} {{t 'redditCommunity'}}
          </ExternalLink>
          <br>
          <ExternalLink href='https://twitter.com/emberclear_io'>
            {{fa-icon 'twitter' prefix='fab'}} {{t 'twitter'}}
          </ExternalLink>
        </div>
      </div>
    </div>
  </div>
</footer>
