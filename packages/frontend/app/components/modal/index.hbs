<KeyboardPress @key='Escape' @onDown={{@close}} />

<div
  ...attributes
  data-test-modal
  aria-modal
  aria-hidden={{not @isActive}}
  class='modal {{if @isActive 'is-active'}}'
>

  <div
    data-test-modal-content
    class='modal-content'
  >
    {{#if @isActive}}
      {{yield}}
    {{/if}}
  </div>


  <Ui::Backdrop
    data-test-modal-backdrop
    @isActive={{true}} @onClick={{@close}} />

</div>


