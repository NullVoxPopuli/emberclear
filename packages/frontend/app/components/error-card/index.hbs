<div data-test-error class='card' ...attributes>

  <header>{{t 'errors.genericTitle'}}</header>

  <p data-test-message>
    {{@message}}
  </p>

  <footer class='cta'>
    {{#if @retry}}
      <button data-test-retry type='button' class='button-secondary' {{on 'click' @retry}}>
        {{t 'buttons.retry'}}
      </button>
    {{/if}}
  </footer>
</div>