{{#if this.shouldBeRendered}}
  <li data-test-contact-row {{did-insert (perform this.findRelevantMessages)}}>
    <a
      {{on 'click' (prevent-default this.onClick)}}
      href={{url-for 'chat.privately-with' @contact.id}}
      class='
        flex-row align-items-center justify-content-space-between
        {{if this.isActive 'is-active'}}
      '
    >
      <span data-test-contact-name class='flex-row align-items-center'>
        <StatusIcon @contact={{@contact}} />
        <span class='m-l-sm'>{{or @contact.name '[unnamed]'}}</span>
      </span>

      {{#if this.hasUnread}}
        <span
          {{unread-messages-intersection-observer}}
          class='tag is-danger is-small is-pulled-right'
        >
          {{this.numberUnread}}
        </span>
      {{/if}}
    </a>
  </li>
{{/if}}
