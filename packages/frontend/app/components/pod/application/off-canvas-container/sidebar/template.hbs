<div ...attributes>
  <aside
    class='
      menu has-sidebar-background-color
      is-inverted flex-grow
      p-sm is-size-6
      flex-column justify-content-space-between'
  >
    <div>
      <div class='is-hidden-desktop'>
        <TopMobileSection />
      </div>

      {{#if this.hasUnreadAbove}}
        <UnreadIndicator
          @onClick={{this.scrollUpToNearestUnread}}
          @direction='up'
        />
      {{/if}}

      <Contacts @closeSidebar={{this.closeSidebar}} />
      <Channels @closeSidebar={{this.closeSidebar}} />

      {{!-- <SlideTransition @isVisible={{this.hasUnreadBelow}}> --}}
      {{#if this.hasUnreadBelow}}
        <UnreadIndicator
          @onClick={{this.scrollDownToNearestUnread}}
          @direction='down'
        />
      {{/if}}

    </div>

    {{#if this.isLoggedIn}}
      <div class='align-self-end'>
        <hr class='divider m-b-sm'>

        <a
          class='navbar-item flex-row align-items-center'
          {{action (queue
            (action this.closeSidebar)
            (transition-to 'logout'))
          }}
        >
          <span class='icon'>{{fa-icon 'sign-out-alt' prefix='fas'}}</span>
          <span>{{t 'routes.logout'}}</span>
        </a>
      </div>
    {{/if}}
  </aside>
</div>
