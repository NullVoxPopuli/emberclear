<button
  type='button'
  class='
    p-absolute {{if (eq @direction 'down') 'bottom' 'top'}}
    button is-info is-small
    m-b-sm
    '
  style='margin-top: 60px; z-index: 100;'
  {{on 'click' @onClick}}
>
  <span class='icon'>
    {{#if (eq @direction 'down')}}
      {{fa-icon 'angle-down'}}
    {{else}}
      {{fa-icon 'angle-up'}}
    {{/if}}
  </span>

  {{t 'ui.sidebar.unread'}}

  <span class='icon'>
    {{#if (eq @direction 'down')}}
      {{fa-icon 'angle-down'}}
    {{else}}
      {{fa-icon 'angle-up'}}
    {{/if}}
  </span>
</button>
