
{{#if (includes this.state 'error')}}

  <ErrorCard
    @message={{this.ctx.error}}
    @retry={{fn this.transition 'RETRY'}}
  />

{{else if (or
  (includes this.state 'scanning')
  (includes this.state 'scanned')
  (includes this.state 'loginToANewDevice.determineIfAllowed')
)}}

  <QRScanner @onScan={{this.handleScan}} />

{{else if (includes this.state 'loginToANewDevice.askPermission')}}

  <Pod::QR::Login::Ask
    @code={{this.ctx.data.verify}}
    @allow={{fn this.transition 'ALLOW'}}
    @deny={{fn this.transition 'DENY'}}
  />

{{else if (includes this.state 'loginToANewDevice.transferAllowed')}}

  {{t 'ui.login.transfer.inProgress'}}

{{else if (includes this.state 'loginToANewDevice.transferComplete')}}

  {{t 'ui.login.transfer.success'}}

{{else if (includes this.state 'loginToANewDevice.transferError')}}

  {{t 'errors.genericRetry'}}

{{else}}

  <ErrorCard
    @message={{t 'errors.genericRetry'}}
    @retry={{fn this.transition 'RETRY'}}
  />

{{/if}}



