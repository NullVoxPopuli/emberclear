<tr>
  <td>
    {{#if this.isActive}}
      <span data-test-connected class='tag is-primary'>{{t 'status.connected'}}</span>
    {{/if}}

    {{#if (not (eq @relay.priority 1))}}
      <button
        data-test-make-default
        type='button'
        {{on 'click' this.makeDefault}}
      >
        {{t 'buttons.makeDefault'}}
      </button>
    {{/if}}
  </td>
  <td>{{@relay.priority}}</td>
  <td>
    <label class='has-text-weight-bold'>
      {{t 'ui.settings.relays.socket'}}:
    </label> {{@relay.socket}}
    <br>

    <label class='has-text-weight-bold'>
      {{t 'ui.settings.relays.openGraph'}}:
    </label> {{@relay.og}}

    <label>
      {{t 'ui.settings.relays.connectedUsers'}}:
    </label> {{or @relay.connectionCount 'Unknown'}}
  </td>
  <td>
    <button
      data-test-remove
      type='button'
      {{on 'click' this.remove}}
    >
      {{t 'buttons.remove'}}
    </button>
  </td>
</tr>
