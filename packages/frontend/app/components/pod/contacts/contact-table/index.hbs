<table data-test-contacts>
  <thead>
    <tr>
      <th>{{t 'models.identity.name'}}</th>
      <th>{{t 'models.identity.publicKey'}}</th>
      <th>{{t 'models.identity.verification'}}</th>
      <th></th>
    </tr>
  </thead>
  <tbody>

    {{#each this.contacts key='id' as |contact|}}
      <tr data-test-contact-row>
        <td>
          {{contact.name}}
        </td>
        <td>
          {{first-8 contact.publicKeyAsHex}}...
        </td>
        <td>
          <a class='button' 
            href={{url-for 'contacts.verify-friend' contact.id}}
            {{on 'click' (transition-to (url-for 'contacts.verify-friend' contact.id))}}>
            {{t contact.verification}}
          </a>
        </td>
        <td class='flex justify-content-end'>
          <button
            type='button'
            class='button-danger'
            {{on 'click' (fn this.remove contact)}}
          >
            {{t 'buttons.remove'}}
          </button>
        </td>
      </tr>
    {{/each}}

    {{#if (eq this.contacts.length 0)}}
      <tr>
        <td colspan='3'>
          {{t 'ui.contacts.noContacts'}}
        </td>
      </tr>
    {{/if}}

  </tbody>
</table>
