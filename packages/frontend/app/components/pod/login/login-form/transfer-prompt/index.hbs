<div class='right text-center'>
  {{#if this.isLoading}}
    <EllipsisLoader />
    <br>
    {{this.taskMessage}}
  {{else}}
    <QRCode @data={{this.qrData}} />
    <h4 class='manual-verification-code text-center'>
      {{this.verification}}
    </h4>

    <h3>{{t 'ui.login.transfer.title'}}</h3>
    <p>{{t 'ui.login.transfer.prompt'}}
    </p>
  {{/if}}
</div>
