{{!-- TODO: rename this component to MediaInfo or MediaInfoCard --}}
<div class='embedded-resource'>

  <header class='card-header'>
    <button
      type='button'
      class='button-link card-header-icon'
      {{on 'click' this.toggleShow}}
    >
      {{#if this.isCollapsed}}
        <FaIcon @icon='angle-up' />
      {{else}}
        <FaIcon @icon='angle-down' />
      {{/if}}
    </button>

    {{#if (is-present @meta.siteName)}}
      <p class='card-header-title'>
        {{@meta.siteName}}
      </p>
    {{/if}}

  </header>

  {{#if this.isOpen}}

    {{#if @meta.hasExtension}}
      <EmbeddedMedia @url={{@url}} @meta={{@meta}} />
    {{else}}

      <Pod::Chat::ChatHistory::Message::EmbeddedResource::MetadataPreview
        @url={{@url}}
        @ogData={{@meta.openGraph}}
      />

    {{/if}}

  {{/if}}
</div>
