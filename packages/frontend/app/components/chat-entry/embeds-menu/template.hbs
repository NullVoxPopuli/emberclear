<Dropdown @up={{true}} @buttonIcon='plus' @buttonClass='h-100' as |closeMenu|>

  <ModalStatic @name='code-or-snippet' as |_isActive actions|>
    <a
      class='dropdown-item flex align-items-center'
      {{action (queue (action actions.toggle) closeMenu)}}
    >
      <span class='icon m-r-sm'>{{fa-icon 'code'}}</span>
      <span>{{t 'ui.chat.embedMenu.code'}}</span>
    </a>
  </ModalStatic>

  <a class='dropdown-item flex align-items-center has-text-grey-light' disabled>
    <span class='icon m-r-sm'>{{fa-icon 'bed'}}</span>
    <span>{{t 'ui.chat.embedMenu.embed'}}</span>
  </a>

  <hr class='dropdown-divider'>

  <a class='dropdown-item flex align-items-center has-text-grey-light' disabled>
    <span class='icon m-r-sm'>{{fa-icon 'desktop'}}</span>
    <span>{{t 'ui.chat.embedMenu.file'}}</span>
  </a>

  <hr class='dropdown-divider'>

  <a class='dropdown-item flex align-items-center has-text-grey-light' disabled>
    <span class='icon m-r-sm'>{{fa-icon 'video'}}</span>
    <span>{{t 'ui.chat.embedMenu.video'}}</span>
  </a>

  <a class='dropdown-item flex align-items-center has-text-grey-light' disabled>
    <span class='icon m-r-sm'>{{fa-icon 'phone'}}</span>
    <span>{{t 'ui.chat.embedMenu.audio'}}</span>
  </a>
</Dropdown>

<ModalStatic @name='code-or-snippet' as |isActive actions|>
  <Snippet @isActive={{isActive}} @close={{action actions.close}} @sendTo={{@sendTo}} />
</ModalStatic>
