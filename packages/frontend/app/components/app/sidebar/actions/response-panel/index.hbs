<button class='button button-xs' type='button' {{on 'click' this.yes}}>
	<span class='icon'>{{fa-icon 'check'}}</span>
</button>

<button class='button button-xs' type='button' {{on 'click' this.no}}>
	<span class='icon'>{{fa-icon 'times'}}</span>
</button>

<button class='button button-xs' type='button' {{on 'click' this.dismiss}}>
	<span class='icon'>{{fa-icon 'minus'}}</span>
</button>