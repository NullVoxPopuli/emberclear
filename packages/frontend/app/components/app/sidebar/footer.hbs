<footer>
  <hr>
  <div>
    <nav>
      <ModalStatic @name='search' as |isActive actions|>
        <button class='button button-link' type='button' {{on 'click' actions.toggle}}>
          {{fa-icon 'search' prefix='fas'}}
        </button>
      </ModalStatic>

      <a
        class='button button-link'
        href={{url-for 'contacts'}}
        title={{t 'routes.contacts'}}
        {{on 'click' (handle-sidebar-click (transition-to 'contacts'))}}
      >
        {{fa-icon 'address-book' prefix='fas'}}
      </a>

      <a
        class='button button-link'
        href={{url-for 'settings'}}
        title={{t 'routes.settings'}}
        {{on 'click' (handle-sidebar-click (transition-to 'settings'))}}
      >
        {{fa-icon 'sliders-h'}}
      </a>

      <a
        class='button button-link'
        href={{url-for 'logout'}}
        title={{t 'routes.logout'}}
        {{on 'click' (handle-sidebar-click (transition-to 'logout'))}}
      >
        {{fa-icon 'sign-out-alt' prefix='fas'}}
      </a>
    </nav>
  </div>
</footer>