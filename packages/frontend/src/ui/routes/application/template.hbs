<TopNav id='emberclear-topnav'/>


<NotificationContainer @position="top-right" />
<NotificationPrompt />

<ServiceWorkerUpdateNotify>
  <a class="service-worker-update-notify notification is-info" href="">
    A new version is available, click here to update.
  </a>
</ServiceWorkerUpdateNotify>

<OffCanvasContainer class='no-overflow'
  @contacts={{model.contacts}}
  @channels={{model.channels}}>
  {{outlet}}
</OffCanvasContainer>


<MultipleFromElsewhere @name='modals' />

{{!--
  Static Modals / Modals that will /
  could get toggleed from _multiple_ places.
--}}
<ModalStatic @name='add-friend' as |isActive toggle|>
  <AddContact @isActive={{isActive}} @close={{toggle}} />
</ModalStatic>

<ModalStatic @name='show-my-info' as |isActive toggle|>
  <ShowMyInfo @isActive={{isActive}} @close={{toggle}} />
</ModalStatic>

<ModalStatic @name='keyboard-shortcuts' as |isActive toggle|>
  <KeyboardShortcuts @isActive={{isActive}} @close={{toggle}} />

  <KeyboardPress @key="ctrl+KeyH" @onDown={{action toggle}} />
  <KeyboardPress @key="ctrl+Slash" @onDown={{action toggle}} />
</ModalStatic>

<ModalStatic @name='search' as |isActive toggle|>
  <Search @isActive={{isActive}} @close={{toggle}} />

  <KeyboardPress @key="ctrl+KeyK" @onDown={{action toggle}} />
</ModalStatic>


