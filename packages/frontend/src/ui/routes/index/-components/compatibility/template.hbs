{{#if this.isNotCompatible}}
  <ModalStatic @initiallyActive={{true}} @name='compatibility' as |isActive actions|>
    <a
      class='is-block has-text-white m-t-lg is-size-4'
      {{action actions.open}}
    >
      {{fa-icon 'exclamation-circle'}}
      {{this.successCount}} / {{this.totalCount}}
      {{t 'compatibility.compatibility'}}
    </a>

    <Modal
      data-test-compatibility-modal
      @isActive={{isActive}}
      @close={{actions.close}}
      @boxClasses='has-background-none'
    >
      <div class='
        has-text-white
        p-md
        '
      >
        <h2 class='is-size-3'>
          {{fa-icon 'exclamation-circle'}}
          {{t 'compatibility.title'}}
        </h2>
        <p>
          {{t 'compatibility.description'}}
        </p>

        <div class='flex-row justify-content-space-between align-items-end'>
          <div class='flex-column align-items-start'>
            <Feature @value={{this.hasCamera}} @label={{t 'compatibility.camera'}} />
            <Feature @value={{this.hasNotifications}} @label={{t 'compatibility.notifications'}} />
            <Feature @value={{this.hasIndexedDb}} @label={{t 'compatibility.indexeddb'}} />
            <Feature @value={{this.hasWASM}} @label={{t 'compatibility.wasm'}} />
            <Feature @value={{this.hasServiceWorker}} @label={{t 'compatibility.serviceWorker'}} />
            <Feature @value={{this.hasWebWorker}} @label={{t 'compatibility.webWorker'}} />

            <h3 class='is-size-4'>
              {{t 'compatibility.score'}}: {{this.successCount}} / {{this.totalCount}}
            </h3>

          </div>

          <button class='button' {{action actions.close}}>{{t 'buttons.close'}}</button>
        </div>
      </div>
    </Modal>
  </ModalStatic>
{{/if}}
