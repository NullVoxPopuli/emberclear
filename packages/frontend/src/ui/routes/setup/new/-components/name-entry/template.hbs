<form
  data-test-name-form
  {{action this.createIdentity on='submit'}}>

  <div class='content'>
    {{input
      data-test-name-field=true
      class='input is-large'
      type='text'
      placeholder=(t 'ui.setup.nameLabel')
      value=this.name
    }}
  </div>

  {{#link-to 'login'}}
    {{t 'buttons.loginInstead'}}
  {{/link-to}}

  <input
    data-test-next
    type='submit'
    class='button is-pulled-right'
    disabled={{this.nameIsBlank}}
    value={{t 'buttons.next'}}
  >

</form>
