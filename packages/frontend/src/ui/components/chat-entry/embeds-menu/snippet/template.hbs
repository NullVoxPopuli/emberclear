<Modal @isActive={{@isActive}} @close={{@close}}>
  <h5 class='is-size-5 m-b-md'>
    {{t 'ui.chat.codeModal.title' to=@sendTo.name}}
  </h5>

  <div class='flex-row m-b-md m-r-sm'>
    {{input
      class='input'
      value=this.title
      placeholder='Title (optional)'
    }}

    <div class='select m-l-sm'>
      <select onchange={{action (mut this.language) value='target.value'}}>
        {{#each this.languages as |availableLanguage|}}
          <option value={{availableLanguage}}>{{availableLanguage}}</option>
        {{/each}}
      </select>
    </div>
  </div>

  {{textarea
    autofocus=true
    role='snippet-entry'
    class='input transition-all m-b-md snippet-entry'
    value=this.text
  }}

  <div class='flex-row justify-content-end'>
    <button class='button m-r-sm' {{action @close}}>
      {{t 'buttons.cancel'}}
    </button>
    <button class='button is-primary' {{action this.sendMessage}}>
      {{t 'buttons.sendSnippet'}}
    </button>
  </div>
</Modal>
