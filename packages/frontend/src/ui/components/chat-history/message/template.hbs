{{! template-lint-disable no-triple-curlies }}

<div
  id={{@message.id}}
  class='message m-l-md m-r-md m-b-md {{if @message.unread 'unread'}}'
  data-test-chat-message
>
  <div class='message-header'>
    <span class='from'>
      {{#if hasSender}}

        {{#link-to 'chat.privately-with' @message.from}}
          {{senderName}}
        {{/link-to}}

      {{else}}
        <em>{{t 'ui.chat.sender.removed'}}</em>
      {{/if}}
    </span>

    <span class='sentAt has-hover-tip'>
      {{format-date
        @message.sentAt
        year='numeric'
        month='numeric'
        day='numeric'
        hour='numeric'
        minute='numeric'
      }}

      {{#if @message.receivedAt}}
        <HoverTip>
          {{t 'ui.chat.messages.received' at=(format-date @message.receivedAt)}}
        </HoverTip>
      {{/if}}
    </span>
  </div>

  <p
    role='button'
    class='message-body'
    {{action (perform this.markRead)}}
  >
    {{{messageBody}}}

    {{#if (is-present urls)}}
      <div class='flex flex-wrap'>
        {{#each urls as |url|}}
          <EmbeddedResource class='flex' @url={{url}} />
        {{/each}}
      </div>
    {{/if}}
  </p>

  <DeliveryConfirmations @message={{@message}} />
</div>
