{{#if this.shouldRender}}
  <div class='card small embedded-resource'>

    <header class='card-header'>
      {{#if (is-present this.siteName)}}
        <p class='card-header-title'>
          {{this.siteName}}
        </p>
      {{/if}}

      <a class='card-header-icon' {{action this.toggleShow}}>
        <span class='icon'>
          {{#if this.isCollapsed}}
            {{fa-icon 'angle-up'}}
          {{else}}
            {{fa-icon 'angle-down'}}
          {{/if}}
        </span>
      </a>
    </header>

    {{#if (not this.isCollapsed)}}

      {{#if this.isYouTube}}
        <iframe
          class='card-content'
          src="{{this.embedUrl}}" width="560" height="315"
          frameborder="0" allow="autoplay; encrypted-media" allowfullscreen>
        </iframe>

      {{else if this.isImage}}

        <img class='card-content' src={{@url}} />

      {{else}}

        <MetadataPreview
          class='{{if this.hasOgData "card-content"}}'
          @url={{@url}}
          @ogData={{this.ogData}} />

      {{/if}}

    {{/if}}
  </div>
{{/if}}
